@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.FirstName">First Name</label>
                <input id="RFirstName" asp-for="Input.FirstName" class="form-control" onblur="return registerValidateFirstName(txtregisterFirstname_Help)" />
                <span class="text-danger" id="txtregisterFirstname_Help">*</span>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Surname"></label>
                <input id="RSurname" asp-for="Input.Surname" class="form-control" onblur="return registerValidateSurName(txtregisterSurname_Help)" />
                <span class="text-danger" id="txtregisterSurname_Help">*</span>
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Phone"></label>
                <input id="RPhone" asp-for="Input.Phone" class="form-control" onblur="return registerValidatePhoneNo(txtregisterPhone_Help)" />
                <span class="text-danger" id="txtregisterPhone_Help">*</span>
                <span asp-validation-for="Input.Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input id="REmail" asp-for="Input.Email" class="form-control" onblur="return registerValidateEmailHon(txtregisterEmail_Help)" />
                <span class="text-danger" id="txtregisterEmail_Help">*</span>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/registrationValidation.js"></script>

}
