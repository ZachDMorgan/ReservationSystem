<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProgrammingProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @*<link rel="stylesheet" href="~/lib/chartjs/chart.css" />*@
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Manager" asp-controller="Sitting" asp-action="Index">Manage Sittings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Staff" asp-controller="Reservation" asp-action="Index">Manage Reservations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Manager" asp-controller="Area" asp-action="Index">Arrange Seating</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Manager" asp-controller="Reports" asp-action="Index">Reports</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Admin</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown01">
                                
                                <a class="dropdown-item" asp-area="Manager" asp-controller="Admin" asp-action="MemberList">Members</a>
                                <a class="dropdown-item" asp-area="Manager" asp-controller="Admin" asp-action="StaffList">Staff</a>
                                <a class="dropdown-item" asp-area="Manager" asp-controller="Admin" asp-action="CreateStaff">Create Staff</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ProgrammingProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @*<script src="~/lib/chartjs/chart.min.js" asp-append-version="true"></script>*@
    @RenderSection("Scripts", required: false)
</body>
</html>
